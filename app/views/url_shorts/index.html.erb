<p id="notice"><%= notice %></p>

<h1>Listing Url Shorts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>End point</th>
      <th>Hit count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @url_shorts.each do |url_short| %>
      <tr>
        <td><%= url_short.code %></td>
        <td><%= url_short.end_point %></td>
        <td><%= url_short.hit_count %></td>
        <td><%= link_to 'Show', url_short, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_url_short_path(url_short), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', url_short, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url short', new_url_short_path, class: "btn btn-primary" %>
